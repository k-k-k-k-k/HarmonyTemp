import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("../../../../../dsoftbus.gni")

##############################fuzztest##########################################
ohos_fuzztest("GetPeerSessionNameFuzzTest") {
  module_out_path = dsoftbus_fuzz_out_path
  fuzz_config_file = "$dsoftbus_root_path/tests/sdk/transmission/fuzztest/getpeersessionname_fuzzer"
  include_dirs = [
    "$dsoftbus_dfx_path/interface/include",
    "$dsoftbus_root_path/core/common/inner_communication",
    "$dsoftbus_root_path/adapter/common/include",
    "$dsoftbus_root_path/core/common/include",
    "$dsoftbus_root_path/interfaces/kits/common",
    "$dsoftbus_root_path/interfaces/inner_kits/transport",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fstack-protector-strong",
  ]
  sources = [ "getpeersessionname_fuzzer.cpp" ]
  deps = [ "$dsoftbus_root_path/tests/sdk:softbus_client_static" ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = [
    # deps file
    ":GetPeerSessionNameFuzzTest",
  ]
}
