import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/communication/dsoftbus/dsoftbus.gni")

module_output_path = "dsoftbus/transmission"
dsoftbus_root_path = "../../../../../"

ohos_unittest("SoftbusJsonUtilsTest") {
  module_out_path = module_output_path
  sources = [ "softbus_json_utils_test.cpp" ]

  include_dirs = [
    "$dsoftbus_dfx_path/interface/include",
    "$dsoftbus_root_path/core/common/include",
    "$dsoftbus_root_path/interfaces/kits/common",
    "$dsoftbus_root_path/adapter/common/include",
  ]

  deps = [ "$dsoftbus_root_path/core/common:softbus_utils" ]

  external_deps = [
    "cJSON:cjson",
    "googletest:gmock",
    "googletest:gtest_main",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
}

group("SoftbusJsonUtilsUttest") {
  testonly = true
  deps = [ ":SoftbusJsonUtilsTest" ]
}
